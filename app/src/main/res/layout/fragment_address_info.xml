<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.AddressInfoFragment">





    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/presentIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:tint="@color/icon_color"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_toRightOf="@+id/presentIV"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/presentTextTV"
                        android:layout_toLeftOf="@+id/presentAddressPickerIVID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Present Address"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/presentAddressPickerIVID"
                        android:layout_width="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_height="wrap_content"
                        android:tint="@color/icon_color"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_edit"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/presentAddressTV"
                        android:layout_below="@+id/presentTextTV"
                        android:text="No present address"/>



                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/permanentIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:tint="@color/icon_color"
                    android:src="@drawable/ic_location_on_black_24dp"
                    android:layout_centerVertical="true"/>

                <RelativeLayout
                    android:layout_toRightOf="@+id/permanentIV"
                    android:layout_width="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/permanentTextTV"
                        android:layout_toLeftOf="@+id/permanentAddressPickerIVID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Permanent Address"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>

                    <ImageView
                        android:id="@+id/permanentAddressPickerIVID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:tint="@color/icon_color"
                        android:padding="5dp"
                        android:layout_alignParentRight="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_edit"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/permanentAddressTV"
                        android:layout_below="@+id/permanentTextTV"
                        android:text="No permanent address"/>



                </RelativeLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>