<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.GeneralInfoFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/nameIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_person_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/nameIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/nameTextTV"
                            android:layout_toLeftOf="@+id/editGeneralInfoIV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/editGeneralInfoIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:padding="8dp"
                            android:tint="@color/icon_color"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/nameTV"
                            android:layout_below="@+id/nameTextTV"
                            android:text="No name"/>



                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/genderIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_group_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/genderIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/genderTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Gender"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/genderTV"
                            android:layout_below="@+id/genderTextTV"
                            android:text="No gender"/>



                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/bloodIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_bubble_chart_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/bloodIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/bloodTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Blood Group"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/bloodTV"
                            android:layout_below="@+id/bloodTextTV"
                            android:text="No blood group"/>


                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/dateOfBirthIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_date_range_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/dateOfBirthIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/birthDateTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Birth Date"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/birthDateTV"
                            android:layout_below="@+id/birthDateTextTV"
                            android:text="No birth date"/>



                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/emailIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_mail_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/emailIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/emailTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-mail"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/emailTV"
                            android:layout_below="@+id/emailTextTV"
                            android:text="No E-mail"/>


                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>