                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science &amp; Engineering"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
