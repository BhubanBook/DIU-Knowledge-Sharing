<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:scaleType="fitXY"
        android:src="@drawable/welcome_2"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="How to Use"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="200dp"
                android:layout_height=".5dp"
                android:background="@color/white"
                android:layout_gravity="center"
                android:layout_margin="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:text="To use this app first you need to create an account with valid information Then you can search experts for any course which you need and You can share your knowledge to others. You can also donate your blood and find blood donor."/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>