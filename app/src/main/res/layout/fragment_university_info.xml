<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.UniversityInfoFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/deptIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_class_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/deptIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/deptTextTV"
                            android:layout_toLeftOf="@+id/editGeneralInfoIV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Department"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/editUniversityInfoIV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit"
                            android:padding="8dp"
                            android:tint="@color/icon_color"
                            android:layout_alignParentRight="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/deptTV"
                            android:layout_below="@+id/deptTextTV"
                            android:text="No dept."/>



                    </RelativeLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/batchIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_security_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/batchIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/batchTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Batch Number"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/batchTV"
                            android:layout_below="@+id/batchTextTV"
                            android:text="No batch"/>



                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/rollIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_confirmation_number_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/rollIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/rollTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Roll Number"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rollTV"
                            android:layout_below="@+id/rollTextTV"
                            android:text="No roll"/>


                    </RelativeLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/registrationIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:tint="@color/icon_color"
                        android:src="@drawable/ic_confirmation_number_black_24dp"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:layout_toRightOf="@+id/registrationIV"
                        android:layout_width="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/registrationTextTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registration Number"
                            android:textColor="@color/black"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/registrationTV"
                            android:layout_below="@+id/registrationTextTV"
                            android:text="No reg."/>



                    </RelativeLayout>


                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>